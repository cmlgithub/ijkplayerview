<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.cml.ijkplayerviewcml.media.IjkPlayerView
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:id="@+id/ijkPlayerView"
        android:layout_width="200dp"
        android:layout_height="200dp"/>


    <Button
        android:text="noVoice"
        android:onClick="noVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="haveVoice"
        android:layout_alignParentRight="true"
        android:onClick="haveVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="fullScreen"
        android:text="fullScreen"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_alignParentRight="true"
        android:onClick="normalScreen"
        android:text="normalScreen"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>